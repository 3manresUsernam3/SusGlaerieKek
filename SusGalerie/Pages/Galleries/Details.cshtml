@page
@using SusGalerie.Models;
@model SusGalerie.Pages.Galleries.DetailsModel

@{
    ViewData["Title"] = "Details";
}
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<h1>Details</h1>

<div>
    <h4>ImageCollection</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ImageCollection.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ImageCollection.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ImageCollection.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ImageCollection.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ImageCollection.Created)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ImageCollection.Created)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ImageCollection.Public)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ImageCollection.Public)
        </dd>
    </dl>
</div>
<div>
    @if (SignInManager.IsSignedIn(User) && !User.IsInRole("Admin"))
    {
        <a asp-page="./Edit" asp-route-id="@Model.ImageCollection?.Id">Edit</a>
    } |
    <a asp-page="../Index">Back to List</a>
</div>
