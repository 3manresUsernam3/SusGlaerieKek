@using Microsoft.AspNetCore.Identity
@using SusGalerie.Models;
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a  class="nav-link font-color-white" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@User.Identity?.Name</a>
    </li>
    <li class="nav-item">
        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post" >
            <button type="submit" class="nav-link font-color-white btn btn-danger">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link font-color-white btn btn-success margin-nav-5" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link font-color-white btn btn-success margin-nav-5" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
